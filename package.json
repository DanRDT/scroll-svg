{
  "name": "scroll-svg",
  "version": "1.5.2",
  "description": "A library to make animating svgs on scroll easier.",
  "private": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "browser": "./dist/index.global.min.js",
  "unpkg": "./dist/index.global.min.js",
  "jsdelivr": "./dist/index.global.min.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "lint": "tsc",
    "build": "tsup",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "version": "pnpm changeset",
    "release": "pnpm run ci && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanRDT/scroll-svg.git"
  },
  "keywords": [
    "scroll",
    "svg",
    "animations",
    "animate svg",
    "svg path",
    "draw svg",
    "scroll animation"
  ],
  "author": "Daniel Pulber",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DanRDT/scroll-svg/issues"
  },
  "homepage": "https://github.com/DanRDT/scroll-svg#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@swc/core": "^1.15.8",
    "@types/jsdom": "^27.0.0",
    "jsdom": "^27.4.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "publishConfig": {
    "access": "public"
  }
}
