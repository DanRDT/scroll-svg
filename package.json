{
  "name": "scroll-svg",
  "version": "1.4.2",
  "description": "A library to make animating svgs on scroll easier.",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "unpkg": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "lint": "tsc",
    "transpile": "tsup ./src/index.ts --format esm --dts --minify",
    "bundle": "webpack",
    "build": "pnpm run transpile && pnpm run bundle",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "release": "pnpm run ci && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanRDT/scroll-svg.git"
  },
  "keywords": [
    "scroll",
    "svg",
    "animations",
    "animate svg",
    "svg path",
    "draw svg",
    "scroll animation"
  ],
  "author": "Daniel Pulber",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DanRDT/scroll-svg/issues"
  },
  "homepage": "https://github.com/DanRDT/scroll-svg#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/jsdom": "^21.1.2",
    "jsdom": "^22.1.0",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
